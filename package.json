{
  "name": "express-mvc-backend",
  "version": "1.0.0",
  "description": "Express MVC Backend with TypeScript",
  "main": "dist/app.js",
  "scripts": {
    "start": "node dist/app.js",
    "dev": "nodemon src/app.js",
    "dev:watch": "nodemon --watch src -e js,json --exec node src/app.js",
    "build": "tsc",
    "test": "mocha 'src/test/**/*.test.js'",
    "test:watch": "mocha 'src/test/**/*.test.js' --watch",
    "test:coverage": "nyc npm test"
  },
  "keywords": [
    "express",
    "typescript",
    "node",
    "api",
    "backend"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cloudinary": "^2.6.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "express-validator": "^7.2.1",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^7.0.3",
    "multer": "^1.4.5-lts.2",
    "nodemailer": "^6.9.1",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.15.11",
    "@types/nodemailer": "^6.4.7",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "chai": "^4.3.7",
    "chai-http": "^4.3.0",
    "eslint": "^8.37.0",
    "mocha": "^10.2.0",
    "mongodb-memory-server": "^8.12.2",
    "nodemon": "^3.1.10",
    "nyc": "^15.1.0",
    "sinon": "^15.1.0",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.3"
  }
}
